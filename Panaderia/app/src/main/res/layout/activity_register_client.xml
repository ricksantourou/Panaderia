<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".ActivityRegisterClient">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="154dp"
                android:layout_height="118dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="90dp"
                android:layout_marginBottom="0dp"
                app:srcCompat="@drawable/logo" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/registro" />

            <EditText
                android:id="@+id/registeruser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/border_text"
                android:backgroundTint="@color/colorWhite"
                android:drawableStart="@drawable/ic_person"
                android:drawablePadding="5dp"
                android:ems="10"
                android:hint="Usuario"
                android:inputType="textPersonName"
                android:padding="15dp"
                android:textColorLink="@color/colorPrimary"
                android:textCursorDrawable="@color/colorPrimary" />

            <EditText
                android:id="@+id/registeremail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/border_text"
                android:backgroundTint="@color/colorWhite"
                android:drawableStart="@drawable/ic_email_black_24dp"
                android:drawablePadding="5dp"
                android:ems="10"
                android:hint="Email"
                android:inputType="textWebEmailAddress"
                android:padding="15dp"
                android:textColorLink="@color/colorPrimary"
                android:textCursorDrawable="@color/colorPrimary" />

            <EditText
                android:id="@+id/registercel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/border_text"
                android:backgroundTint="@color/colorWhite"
                android:drawableStart="@drawable/ic_phone_android_black_24dp"
                android:drawablePadding="5dp"
                android:ems="10"
                android:hint="Numero de celular"
                android:inputType="phone"
                android:padding="15dp"
                android:textColorLink="@color/colorPrimary"
                android:textCursorDrawable="@color/colorPrimary" />

            <LinearLayout
                android:layout_width="353dp"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/registerdoctype"
                    android:layout_width="346dp"
                    android:layout_height="49dp"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:drawableStart="@drawable/identify" />
            </LinearLayout>

            <EditText
                android:id="@+id/registernumdoc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/border_text"
                android:backgroundTint="@color/colorWhite"
                android:drawableStart="@drawable/ic_identify"
                android:drawablePadding="5dp"
                android:ems="10"
                android:hint="Numero de documento"
                android:inputType="textPassword"
                android:padding="15dp" />

            <EditText
                android:id="@+id/registerpass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/border_text"
                android:backgroundTint="@color/colorWhite"
                android:drawableStart="@drawable/ic_vpn_key"
                android:drawablePadding="5dp"
                android:ems="10"
                android:hint="contraseña"
                android:inputType="textPassword"
                android:padding="15dp" />

            <EditText
                android:id="@+id/registerpassconfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/border_text"
                android:backgroundTint="@color/colorWhite"
                android:drawableStart="@drawable/ic_vpn_key"
                android:drawablePadding="5dp"
                android:ems="10"
                android:hint="Confirmar Contraseña"
                android:inputType="textPassword"
                android:padding="15dp" />

            <Button
                android:id="@+id/btnregister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/button_border"
                android:padding="20dp"
                android:text="Registrar"
                android:textColor="@color/colorWhite" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>